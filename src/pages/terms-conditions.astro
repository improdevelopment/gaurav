<style>
  .terms-conditions {
    padding: 140px 0 80px;
    background: #fff;
    min-height: 100vh;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .content-wrapper {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  .page-header {
    background: #000;
    color: white;
    padding: 48px 40px;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 12px;
    letter-spacing: -1px;
  }

  .last-updated {
    color: #ccc;
    font-size: 1rem;
    font-weight: 500;
  }

  .content {
    padding: 48px 40px;
  }

  .terms-section {
    margin-bottom: 40px;
  }

  .terms-section:last-child {
    margin-bottom: 0;
  }

  .terms-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #000;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid #f0f0f0;
  }

  .terms-section p {
    color: #555;
    line-height: 1.7;
    margin-bottom: 16px;
    font-size: 1rem;
  }

  .terms-section ul {
    margin: 16px 0;
    padding-left: 24px;
  }

  .terms-section li {
    color: #555;
    line-height: 1.6;
    margin-bottom: 8px;
  }

  .contact-info {
    background: #f8f9fa;
    padding: 24px;
    border-radius: 12px;
    border-left: 4px solid #000;
  }

  .contact-info p {
    margin-bottom: 8px;
    color: #333;
  }

  .contact-info a {
    color: #000;
    text-decoration: none;
    font-weight: 500;
  }

  .contact-info a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .terms-conditions {
      padding: 120px 0 60px;
    }

    .container {
      padding: 0 20px;
    }

    .page-header {
      padding: 36px 28px;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .content {
      padding: 36px 28px;
    }

    .terms-section h2 {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .page-header h1 {
      font-size: 1.8rem;
    }

    .content {
      padding: 32px 24px;
    }
  }
</style>