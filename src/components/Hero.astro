<section class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        <span class="title-line animate-fade-in-up stagger-1">The Most Powerful</span><br />
        <span class="title-line animate-fade-in-up stagger-2">AI Marketing Director</span><br />
        <span class="emphasis-text animate-fade-in-up stagger-3">in the World</span>
      </h1>
      <div class="hero-badge animate-fade-in-down">
        <span>Title chosen by the marketing team. I still make my own coffee.</span>
      </div>
      <p class="hero-description animate-fade-in-up stagger-4">
        Independent consultant and fractional AI marketing director for CEOs and CMOs, turning AI systems into revenue. Ranked among the top 1% of AI marketing professionals globally.
      </p>
      <div class="hero-stats animate-fade-in-up stagger-5">
        <div class="stat hover-lift interactive">
          <span class="stat-number counter" data-target="22">0</span>
          <span class="stat-label">Years Experience</span>
        </div>
        <div class="stat hover-lift interactive">
          <span class="stat-number">$20M+</span>
          <span class="stat-label">Ad Spend Managed</span>
        </div>
        <div class="stat hover-lift interactive">
          <span class="stat-number counter" data-target="30">0</span>
          <span class="stat-label">Team Members</span>
        </div>
      </div>
      <div class="hero-cta animate-fade-in-up stagger-5">
        <a
          href="/research"
          class="cta-primary micro-bounce">View Research</a
        >
        <a
          href="https://www.linkedin.com/in/gauravwebmarketing"
          target="_blank"
          rel="noopener noreferrer"
          class="cta-secondary micro-bounce">Connect with Gaurav</a
        >
      </div>
    </div>
    <div class="hero-visual animate-fade-in-right">
      <div class="image-placeholder animate-float">
        <img
          src="/gaurav.png"
          alt="Gaurav Agarwal - Professional Photo"
          class="hero-image"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 140px 0 100px;
    background: #fff;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(0, 0, 0, 0.05);
    color: #333;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.3px;
    margin-bottom: 32px;
    text-transform: uppercase;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 32px;
    color: #000;
    letter-spacing: -2px;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.2s both;
  }

  .emphasis-text {
    color: #000;
    font-weight: 300;
    font-style: italic;
  }

  .hero-description {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 48px;
    line-height: 1.7;
    font-weight: 400;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
  }

  .hero-stats {
    display: flex;
    gap: 60px;
    margin-bottom: 48px;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.6s both;
  }

  .stat {
    text-align: left;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    color: #000;
    line-height: 1;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-cta {
    display: flex;
    gap: 20px;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.8s both;
  }

  .cta-primary,
  .cta-secondary {
    padding: 14px 28px;
    border-radius: 30px;
    font-weight: 500;
    font-size: 15px;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: none;
    letter-spacing: 0.2px;
  }

  .cta-primary {
    background: #000;
    color: white;
  }

  .cta-primary:hover {
    background: #333;
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
  }

  .cta-secondary {
    background: rgba(0, 0, 0, 0.05);
    color: #000;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .cta-secondary:hover {
    background: rgba(0, 0, 0, 0.1);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeInRight 1s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
  }

  .image-placeholder {
    width: 100%;
    max-width: 450px;
    height: 550px;
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .image-placeholder:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.18);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: all 0.4s ease;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .image-placeholder:hover .image-overlay {
    opacity: 1;
  }

  .overlay-content {
    text-align: center;
    color: white;
  }

  .camera-icon {
    margin-bottom: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .camera-icon svg {
    stroke: white;
    opacity: 0.9;
  }

  .overlay-content span {
    font-size: 1.1rem;
    font-weight: 600;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 60px;
      text-align: center;
    }

    .hero-title {
      font-size: 3.5rem;
    }

    .hero-stats {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 120px 0 80px;
    }

    .hero-container {
      padding: 0 20px;
    }

    .hero-title {
      font-size: 2.8rem;
      letter-spacing: -1px;
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .hero-stats {
      gap: 40px;
      flex-wrap: wrap;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      max-width: 280px;
      text-align: center;
    }

    .image-placeholder {
      height: 400px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 24px;
      align-items: center;
    }

    .stat {
      text-align: center;
    }
  }
</style>

<script>
  // Counter animation
  function animateCounters() {
    const counters = document.querySelectorAll('.counter');
    
    counters.forEach(counter => {
      const target = parseInt(counter.getAttribute('data-target'));
      const duration = 2000; // 2 seconds
      const increment = target / (duration / 16); // 60fps
      let current = 0;
      
      const updateCounter = () => {
        if (current < target) {
          current += increment;
          counter.textContent = Math.floor(current);
          requestAnimationFrame(updateCounter);
        } else {
          counter.textContent = target;
        }
      };
      
      // Start animation when element is visible
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            setTimeout(updateCounter, 1000); // Delay start
            observer.unobserve(entry.target);
          }
        });
      });
      
      observer.observe(counter);
    });
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', animateCounters);
</script>
