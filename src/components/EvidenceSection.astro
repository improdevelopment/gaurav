<style>
  .evidence-section {
    padding: 120px 0;
    background: #fafafa;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
    color: #000;
    letter-spacing: -1px;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #666;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .evidence-content {
    display: grid;
    gap: 60px;
  }

  .evidence-block {
    background: #fff;
    padding: 40px 32px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 20px;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .evidence-block:hover {
    transform: translateY(-6px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
  }

  .evidence-block h3 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 32px;
    color: #000;
    text-align: center;
    position: relative;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
  }

  .stat-item {
    text-align: center;
    padding: 32px 24px;
    background: #f8f8f8;
    border: 1px solid #e0e0e0;
    transition: all 0.3s ease;
    border-radius: 20px;
  }

  .stat-item:hover {
    background: #000;
    color: white;
    transform: translateY(-4px);
  }

  .stat-item:hover .stat-source {
    color: #ccc;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    color: #000;
    margin-bottom: 16px;
    line-height: 1;
  }

  .stat-item:hover .stat-number {
    color: white;
  }

  .stat-description {
    font-size: 1rem;
    color: #333;
    margin-bottom: 12px;
    line-height: 1.5;
  }

  .stat-item:hover .stat-description {
    color: white;
  }

  .stat-source {
    font-size: 0.85rem;
    color: #666;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .analysis-content {
    display: grid;
    gap: 32px;
  }

  .analysis-point {
    display: grid;
    grid-template-columns: 60px 1fr;
    gap: 24px;
    align-items: start;
  }

  .point-icon {
    text-align: center;
    padding: 18px;
    background: #000;
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    transition: all 0.3s ease;
  }

  .point-icon svg {
    width: 24px;
    height: 24px;
    stroke: white;
  }

  .point-content h4 {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: #000;
  }

  .point-content p {
    color: #666;
    line-height: 1.6;
    font-size: 1rem;
  }

  .conclusion-block {
    background: #000;
    color: white;
    padding: 48px 40px;
    border-radius: 0;
    text-align: center;
  }

  .conclusion-content h3 {
    font-size: 2.2rem;
    font-weight: 800;
    margin-bottom: 24px;
    color: white;
  }

  .conclusion-content h3::after {
    background: white;
  }

  .conclusion-content p {
    font-size: 1.2rem;
    line-height: 1.7;
    color: #ccc;
    max-width: 800px;
    margin: 0 auto;
  }

  .conclusion-content strong {
    color: white;
    font-weight: 700;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .evidence-section {
      padding: 80px 0;
    }

    .container {
      padding: 0 20px;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .section-header h2 {
      font-size: 2.2rem;
    }

    .evidence-content {
      gap: 40px;
    }

    .evidence-block {
      padding: 36px 28px;
    }

    .evidence-block h3 {
      font-size: 1.6rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .stat-item {
      padding: 24px 20px;
    }

    .stat-number {
      font-size: 2.5rem;
    }

    .analysis-point {
      grid-template-columns: 1fr;
      gap: 16px;
      text-align: center;
    }

    .point-icon {
      margin: 0 auto;
    }

    .conclusion-block {
      padding: 36px 28px;
    }

    .conclusion-content h3 {
      font-size: 1.8rem;
    }

    .conclusion-content p {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.8rem;
    }

    .evidence-block {
      padding: 32px 24px;
    }

    .stat-number {
      font-size: 2rem;
    }

    .conclusion-content h3 {
      font-size: 1.6rem;
    }
  }
</style>