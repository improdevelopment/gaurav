<style>
  .footer {
    background: #111;
    color: white;
    padding: 80px 0 0;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: 80px;
    padding-bottom: 60px;
    border-bottom: 1px solid #333;
  }

  .footer-brand {
    max-width: 400px;
  }

  .brand-text {
    font-weight: 800;
    font-size: 24px;
    letter-spacing: 2px;
    color: white;
    display: block;
    margin-bottom: 12px;
  }

  .brand-subtitle {
    color: #999;
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .brand-description {
    color: #ccc;
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 48px;
  }

  .link-group h4 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 24px;
    color: white;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .link-group a {
    display: block;
    color: #ccc;
    text-decoration: none;
    margin-bottom: 16px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    position: relative;
    padding-left: 0;
  }

  .link-group a:hover {
    color: white;
    padding-left: 8px;
  }

  .link-group a::before {
    content: "";
    position: absolute;
    left: -8px;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 1px;
    background: white;
    transition: width 0.3s ease;
  }

  .link-group a:hover::before {
    width: 4px;
  }

  .footer-bottom {
    padding: 32px 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-bottom p {
    color: #666;
    font-size: 0.9rem;
  }

  .footer-bottom-links {
    display: flex;
    gap: 32px;
  }

  .footer-bottom-links a {
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: #ccc;
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 60px 0 0;
    }

    .container {
      padding: 0 20px;
    }

    .footer-content {
      gap: 48px;
      padding-bottom: 48px;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .footer-bottom-links {
      gap: 24px;
    }
  }

  @media (max-width: 480px) {
    .brand-text {
      font-size: 20px;
      letter-spacing: 1px;
    }

    .footer-bottom-links {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>
