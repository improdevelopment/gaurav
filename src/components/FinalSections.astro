<style>
  .final-sections {
    background: #fff;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
    color: #000;
    letter-spacing: -1px;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #666;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Vision Section */
  .vision-section {
    padding: 120px 0;
    background: #fafafa;
  }

  .vision-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .vision-description {
    font-size: 1.2rem;
    line-height: 1.7;
    color: #333;
    margin-bottom: 24px;
  }

  .vision-quote {
    background: #000;
    color: white;
    padding: 40px 32px;
    border-radius: 20px;
    text-align: center;
  }

  .vision-quote blockquote {
    font-size: 1.4rem;
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 24px;
    color: white;
    font-weight: 300;
  }

  .vision-quote cite {
    font-size: 1rem;
    color: #ccc;
    font-style: normal;
    font-weight: 500;
  }

  /* References Section */
  .references-section {
    padding: 120px 0;
    background: #fff;
  }

  .references-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 32px;
  }

  .reference-item {
    display: grid;
    grid-template-columns: 56px 1fr;
    gap: 18px;
    padding: 28px 24px;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    transition: all 0.4s ease;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
  }

  .reference-item:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    background: #fafafa;
  }

  .reference-icon {
    width: 56px;
    height: 56px;
    background: #000;
    color: white;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .reference-icon svg {
    width: 24px;
    height: 24px;
    stroke: white;
  }

  .reference-content h4 {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: #000;
  }

  .reference-content p {
    color: #666;
    line-height: 1.5;
    font-size: 1rem;
  }

  .reference-content strong {
    color: #000;
    font-weight: 600;
  }

  /* Summary Section */
  .summary-section {
    padding: 120px 0;
    background: #000;
    color: white;
  }

  .summary-section .section-header h2 {
    color: white;
  }

  .summary-section .section-header p {
    color: #ccc;
  }

  .summary-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .summary-text p {
    font-size: 1.3rem;
    line-height: 1.7;
    color: #ccc;
    margin-bottom: 24px;
  }

  .summary-text strong {
    color: white;
    font-weight: 700;
  }

  .summary-stats {
    display: grid;
    gap: 32px;
  }

  .summary-stat {
    text-align: center;
    padding: 24px;
    border: 2px solid #333;
    background: #111;
    border-radius: 16px;
  }
  .summary-stat:hover{
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    margin-bottom: 8px;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #ccc;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .vision-content,
    .summary-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .references-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .vision-section,
    .references-section,
    .summary-section {
      padding: 80px 0;
    }

    .container {
      padding: 0 20px;
    }

    .section-header h2 {
      font-size: 2.2rem;
    }

    .vision-quote {
      padding: 36px 28px;
    }

    .vision-quote blockquote {
      font-size: 1.2rem;
    }

    .reference-item {
      padding: 24px;
      grid-template-columns: 1fr;
      gap: 16px;
      text-align: center;
    }

    .reference-icon {
      margin: 0 auto;
    }

    .summary-text p {
      font-size: 1.1rem;
    }

    .summary-stats {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }

    .stat-number {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.8rem;
    }

    .vision-description {
      font-size: 1.1rem;
    }

    .summary-stats {
      grid-template-columns: 1fr;
    }

    .summary-stat {
      padding: 20px;
    }
  }
</style>