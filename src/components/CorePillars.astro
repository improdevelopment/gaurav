        <p>Founder of the AI Institute by IMAPRO, offering Skill-to-Earn programs for young creators.</p>
      </div>
    </div>
  </div>
</section>

<style>
  .core-pillars {
    padding: 120px 0;
    background: #fff;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
    color: #000;
    letter-spacing: -1px;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #666;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-bottom: 32px;
  }

  .pillars-grid-bottom {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    max-width: 800px;
    margin: 0 auto;
  }

  .pillar-card {
    background: #fff;
    padding: 36px 28px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 20px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .pillar-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: #000;
    transform: scaleX(0);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .pillar-card:hover::before {
    transform: scaleX(1);
  }

  .pillar-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
    background: #fff;
  }

  .pillar-icon {
    width: 72px;
    height: 72px;
    background: #000;
    color: white;
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
    transition: all 0.4s ease;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .pillar-icon svg {
    width: 32px;
    height: 32px;
    stroke: white;
  }

  .pillar-card:hover .pillar-icon {
    background: #333;
    transform: scale(1.05);
    color: white;
  }

  .pillar-card h3 {
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #000;
    line-height: 1.3;
  }

  .pillar-card p {
    color: #666;
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 1024px) {
    .pillars-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .pillars-grid-bottom {
      grid-template-columns: 1fr;
      max-width: 400px;
    }
  }

  @media (max-width: 768px) {
    .core-pillars {
      padding: 80px 0;
    }

    .container {
      padding: 0 20px;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .section-header h2 {
      font-size: 2.2rem;
    }

    .pillars-grid,
    .pillars-grid-bottom {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .pillars-grid-bottom {
      max-width: 100%;
    }

    .pillar-card {
      padding: 32px 24px;
    }

    .pillar-icon {
      width: 60px;
      height: 60px;
    }

    .pillar-icon svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.8rem;
    }

    .pillar-card {
      padding: 28px 20px;
    }
  }
</style>