<style>
  .contact-section {
    padding: 120px 0;
    background: #000;
    color: white;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
    max-width: 1400px;
    margin: 0 auto;
  }

  .contact-info {
    text-align: left;
  }

  .contact-info h2 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 24px;
    letter-spacing: -1px;
    line-height: 1.2;
    color: white;
  }

  .contact-info p {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 0;
    line-height: 1.7;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 8px;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px 20px;
    margin-bottom: 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    backdrop-filter: blur(10px);
  }

  .contact-method:last-child {
    margin-bottom: 0;
  }

  .contact-method:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .method-icon {
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
  }

  .contact-method:hover .method-icon {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.1);
  }

  .method-content {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .method-label {
    font-size: 0.8rem;
    color: #888;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    margin-bottom: 2px;
  }

  .method-text {
    color: #e0e0e0;
    font-weight: 500;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    line-height: 1.4;
  }

  .method-text:hover {
    color: white;
  }

  @media (max-width: 900px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: center;
    }

    .contact-methods {
      max-width: 600px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 80px 0;
    }

    .container {
      padding: 0 20px;
    }

    .contact-content {
      gap: 50px;
    }

    .contact-info h2 {
      font-size: 2.2rem;
    }

    .contact-info p {
      font-size: 1.1rem;
      margin-bottom: 40px;
    }

    .contact-method {
      padding: 20px 16px;
      gap: 16px;
      border-radius: 16px;
    }

    .method-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
    }

    .method-text {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .contact-info h2 {
      font-size: 1.8rem;
    }

    .contact-method {
      padding: 18px 14px;
      gap: 14px;
      border-radius: 14px;
    }

    .method-icon {
      width: 44px;
      height: 44px;
      border-radius: 10px;
    }

    .method-icon svg {
      width: 20px;
      height: 20px;
    }

    .method-text {
      font-size: 1rem;
    }

    .method-label {
      font-size: 0.8rem;
    }
  }
</style>
